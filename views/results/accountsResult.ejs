<%- include("../partials/header.ejs") %>
<h1>Here's what you are looking for:</h1>
<br/>
<h2>Accounts data</h2>
<div class="result">
  
  <% if (result && result.length > 0) { %>
  <table>
    <thead>
      <tr>
        <% Object.keys(result[0]).forEach(key => { %>
        <th><%= key %></th>
        
        <% }); %>
      </tr>
    </thead>
    <tbody>
      <% result.forEach(row => { %>
      <tr>
        <% Object.values(row).forEach(value => { %>
        <td><%= value %></td>
        <% }); %>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } if(!result){} %>

  <div class="container">
    <div class="visible" id="addForm">
      <form action="/accounts" method="post">
        <h3>Add data here</h3>
        <label for="ACCOUNT_NO">Account no.</label>
        <input type="text" name="ACCOUNT_NO"/><br/><br/>
        <label for="AVAILABLE_BALANCE">Available balance:</label>
        <input type="text" name="AVAILABLE_BALANCE"/><br/><br/>
        <label for="CLUB_ID">Club ID:</label>
        <input type="text" name="CLUB_ID"/><br/><br/>
        <button type="submit">Add</button>
      </form>
    </div>
    <div class="visible">
      <form action="/accounts" method="post"> <!-- Changed action -->
        <h3>You may delete data here:</h3>
        <label for="ACCOUNT_NO">Enter Account no:</label> <!-- Changed for attribute -->
        <input type="text" name="ACCOUNT_NO"/>
        <button class="deleteBtn" type="submit">Delete</button>
      </form>
    </div>
  </div>
  <br /><br />
</div>

<%- include("../partials/footer.ejs") %>
