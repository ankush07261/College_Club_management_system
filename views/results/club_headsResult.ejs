<%- include("../partials/header.ejs") %>
<h1>Here's what you are looking for:</h1>
<br/>
<h2>Club heads</h2>
<div class="result">
  
  <% if (result && result.length > 0) { %>
  <table>
    <thead>
      <tr>
        <% Object.keys(result[0]).forEach(key => { %>
        <th><%= key %></th>
        
        <% }); %>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      <% result.forEach(row => { %>
      <tr>
        <% Object.values(row).forEach(value => { %>
        <td><%= value %></td>
        <% }); %>
        <td><button>edit</button><button>delete</button></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } if(!result) {}%>
  <div class="container">
    <div class="visible" id="addForm">
      <form action="/club_heads" method="post">
        <h3>Add data here</h3>
        <label for="MEMBER_ID">Member ID:</label>
        <input type="text" name="MEMBER_ID"/><br/><br/>
        <label for="CLUB_ID">Club ID:</label>
        <input type="text" name="CLUB_ID"/><br/><br/>
        <label for="FNAME">First name:</label>
        <input type="text" name="FNAME"/><br/><br/>
        <label for="LNAME">Last name:</label>
        <input type="text" name="LNAME"/><br/><br/>
        <label for="EMAIL">Email:</label>
        <input type="text" name="EMAIL"/><br/><br/>
        <label for="MEMBER_PHONE">Phone number:</label>
        <input type="text" name="MEMBER_PHONE"/><br/><br/>
        <label for="SEMESTER">Semester:</label>
        <input type="text" name="SEMESTER"/><br/><br/>
        <label for="DESIGNATION">Designation:</label>
        <input type="text" name="DESIGNATION"/><br/><br/>
        <button type="submit">Add</button>
      </form>
    </div>
    <div class="visible">
      <form action="/club_heads" method="post"> <!-- Changed action -->
        <h3>You may delete data here:</h3>
        <label for="MEMBER_ID">Enter Club head ID:</label> <!-- Changed for attribute -->
        <input type="text" name="MEMBER_ID"/>
        <button class="deleteBtn" type="submit">Delete</button>
      </form>
    </div>
  </div>
